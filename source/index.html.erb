---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.reverse.each_with_index do |article, i| %>
  <div class="card">
    <div class="card-inner">
      <% link_to article do %>
      <i class="fa fa-file-text-o fa-4x"></i>
      <h2><%= article.title %> </h2>
      <% end %>
    </div>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
