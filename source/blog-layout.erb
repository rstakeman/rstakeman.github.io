<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "all" %>
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,900,400italic' rel='stylesheet' type='text/css'>
  </head>
  <body>
  <div class="header">
    <img class="hero-image" src="<%= current_article.data.hero %>" />
  </div>
    <div id="main" role="main">

      <div class="container">
      <%= yield %>
      <div class="footnotes">
      <% if current_article.data.footnotes.length > 0 %>
        <ol>
          <% current_article.data.footnotes.each do|n| %>
            <li><%= n %></li>        
          <% end %>
        </ol>  
      <%end %>
      </div>
      </div>
    </div>
  </body>
</html>
